{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": false,
		"esModuleInterop": true,
		"declarationDir": "./dist/types",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"mongoose": ["node_modules/mongoose"]
		}
	},
	"include": ["src"]
}
